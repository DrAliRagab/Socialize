parameters:
    level: max
    paths:
        - src
        - tests/Fixtures
    parallel:
        maximumNumberOfProcesses: 1
    tmpDir: build/phpstan
    checkDynamicProperties: true
    reportUnmatchedIgnoredErrors: true
    treatPhpDocTypesAsCertain: true
    type_coverage:
        return: 100
        param: 100
        property: 100
        constant: 100
        declare: 100
    type_perfect:
        no_mixed_property: true
        no_mixed_caller: true
        null_over_false: true
        narrow_param: true
        narrow_return: true
